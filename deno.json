{
  "lock": {
    "path": "./deno.lock",
    "frozen": false
  },
  "nodeModulesDir": "auto",
  "fmt": {
    "useTabs": false,
    "lineWidth": 100,
    "semiColons": true
  },
  "lint": {
    "exclude": ["dist/", "node_modules/", "docs/"],
    "rules": {
      "exclude": [
        "ban-unused-ignore"
      ]
    }
  },
  "test": {
  },
  "tasks": {
    "prepare": "git config --local core.hooksPath git-hooks && cd git-hooks && chmod +x *",
    "bump-workspaces": "deno run -A jsr:@esroyo/deno-bump-workspaces/cli --env-file=.env --release-note-path=CHANGELOG.md --individual-release-notes --git-tag",
    "commit": "deno run -A npm:czg",
    "release": "deno run -A npm:commit-and-tag-version",
    "fmt": "deno fmt",
    "lint": "deno lint",
    "test": "deno test -A",
    "compile:cli": "deno compile -A --output dist/cli ./packages/cli/main.ts",
    "dev:api": "deno run -A --watch ./packages/api/main.ts",
    "dev:cli": "deno run -A ./packages/cli/main.ts",
    "check": "deno fmt --check --ignore=node_modules,docs && deno lint && deno test -A"
  },
  "workspace": [
    "packages/shared",
    "packages/api",
    "packages/cli"
  ],
  "imports": {
    "@cliffy/prompt": "jsr:@cliffy/prompt@1.0.0-rc.4",
    "@shared/": "./packages/shared/",
    "@std/assert": "jsr:@std/assert@^1.0.16",
    "@std/dotenv": "jsr:@std/dotenv@^0.225.6",
    "@std/log": "jsr:@std/log@^0.224.14",
    "gitmoji-cli": "npm:gitmoji-cli@^9.7.0",
    "react": "npm:react@^19.2.3",
    "zod": "npm:zod@^4.3.5"
  },
  "allowScripts": {
    "allow": ["npm:esbuild@0.25.12"],
    "deny": ["npm:protobufjs@7.5.4"]
  }
}
