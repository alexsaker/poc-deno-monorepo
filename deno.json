{
  "lock": {
    "path": "./deno.lock",
    "frozen": false
  },
  "nodeModulesDir": "auto",
  "fmt": {
    "useTabs": false,
    "lineWidth": 100,
    "semiColons": true
  },
  "lint": {
    "exclude": ["dist/", "node_modules/", "docs/"],
    "rules": {
      "exclude": [
        "ban-unused-ignore"
      ]
    }
  },
  "test": {
  },
  "tasks": {
    "prepare": "git config --local core.hooksPath git-hooks && cd git-hooks && chmod +x *",
    "fmt": "deno fmt",
    "lint": "deno lint",
    "test": "deno test -A",
    "build": "echo 'Deno n\u2019a pas de build par d\u00e9faut, mais vous pouvez utiliser deno compile pour le CLI' && deno task compile-cli",
    "compile-cli": "deno compile -A --output dist/cli ./packages/cli/main.ts",
    "dev:api": "deno run -A --watch ./packages/api/main.ts",
    "dev:cli": "deno run -A ./packages/cli/main.ts",
    "mastra:dev": "mastra dev",
    "mastra:build": "mastra build",
    "check": "deno fmt --check && deno lint && deno test -A"
  },
  "workspace": [
    "packages/shared",
    "packages/api",
    "packages/cli"
  ],
  "imports": {
    "@cliffy/prompt": "jsr:@cliffy/prompt@1.0.0-rc.4",
    "@shared/": "./packages/shared/",
    "@std/assert": "jsr:@std/assert@^1.0.16",
    "@std/dotenv": "jsr:@std/dotenv@^0.225.6",
    "@std/log": "jsr:@std/log@^0.224.14",
    "gitmoji-cli": "npm:gitmoji-cli@^9.7.0",
    "react": "npm:react@^19.2.3",
    "zod": "npm:zod@^4.3.5"
  },
  "allowScripts": {
    "allow": ["npm:esbuild@0.25.12"],
    "deny": ["npm:protobufjs@7.5.4"]
  }
}
